<h2>Details about #{@movie.title}</h2>
<ul id="details">
  <li>
    Rating:
    <%= @movie.rating %>
  </li>
  <li>
    Released on:
    <%= @movie.release_date.strftime("%B %d, %Y") %>
  </li>
  <li>
    Director:
    <%= @movie.director %>
  </li>
</ul>
<h3>Description:</h3>
<p id="description">
  <%= @movie.description %>
</p>
<p>
  <%= link_to 'Find Movies With Same Director', search_similar_movies_path(@movie.title) %>
</p>
<%= link_to 'Edit', edit_movie_path(@movie) %>
<%= button_to 'Delete', movie_path(@movie), :method => :delete, :confirm => 'Are you sure?' %>
<%= link_to 'Back to movie list', movies_path %>